---
import Button from "@/components/ui/button.astro";
import Github from "@/icon/github.astro";
import "@/styles/global.css";
import { Image } from "astro:assets";
---

<html class="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>fields4fs</title>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div id="dialog-teleport" class="relative flex min-h-screen flex-col">
      <header
        class="supports-backdrop-blur:bg-background/60 sticky top-0 z-40 w-full border-b bg-background/95 shadow-sm backdrop-blur"
      >
        <div class="container flex h-14 items-center">
          <a href="/browse/0" class="mr-6 flex items-center space-x-2">
            <Image src="/favicon.svg" width={24} height={24} alt="logo" />
            <span class="font-bold">fields4fs</span>
          </a>

          <div class="flex flex-1 items-center justify-end space-x-2">
            <a href="https://github.com/daugvinasr/fields4fs" target="_blank">
              <Button type="button" size="icon" variant="ghost">
                <Github class="h-5 w-5 flex-none fill-foreground" />
              </Button>
            </a>
          </div>
        </div>
      </header>

      <div class="flex-1">
        <div
          class="container flex-1 items-start py-8 md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10"
        >
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
